<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{%- if title -%}{{ title }}{%- else -%}Rafa's website{%- endif -%}</title>
    <meta name="description" content="{%- if description -%}{{ description }}{%- else -%}Personal website of Rafael Conde{%- endif -%}">
    <meta name="author" content="Rafael Conde">
    <meta name="viewport" content="initial-scale=1.0" />
    <link rel="icon" href="favicon.ico" type="image/x-icon" />
    {% if stylesheet %}
    <link rel="stylesheet" href="/css/{{ stylesheet }}"/>
    {% else %}
    <link rel="stylesheet" href="/css/styles.css"/>
    {% endif %}
  </head>
  <body>
    {{ content | safe }}
    {% set js %}{% include "js/scripts.js" %}{% endset %}
    <script>{{ js | jsmin | safe }}</script>
  </body>
</html>
